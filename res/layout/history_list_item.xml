<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:paddingLeft="12dip"
                android:paddingRight="5dip">


    <TextView android:id="@+id/actionDateTime"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/phoneAction"        android:text="ssss"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/actionDateTime"
              android:textColor="#00688B"
              android:textStyle="bold"/>

    <TextView android:id="@+id/smsText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/actionDateTime"
              android:layout_toRightOf="@+id/phoneAction"
              android:paddingLeft="8dip"
              android:singleLine="true"
              android:ellipsize="end"/>
</RelativeLayout>